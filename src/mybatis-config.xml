<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <typeAliases>
        <package name="com.fuybooo.pojo"/>
    </typeAliases>
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="com.mysql.jdbc.Driver"/>
                <!--提交时不要将真实域名暴露出去，以免惹祸上身-->
                <property name="url" value="jdbc:mysql://10.18.13.112:3306/f_monster?characterEncoding=UTF-8"/>
                <property name="username" value="root"/>
                <property name="password" value="root"/>
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <mapper resource="com/fuybooo/pojo/Category.xml"/>
        <mapper resource="com/fuybooo/pojo/Product.xml"/>
        <mapper resource="com/fuybooo/pojo/Order.xml"/>
        <mapper resource="com/fuybooo/pojo/OrderItem.xml"/>

    </mappers>
</configuration>